<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.moviles.kamachi">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:requestLegacyExternalStorage="true"
        android:allowBackup="true"
        android:icon="@drawable/hamachi_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_hamachi_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kamachi">
        <activity android:name=".activity_inscription"></activity>
        <activity android:name=".activity_editprofile" />
        <activity android:name=".activity_paymethod" />
        <activity android:name=".activity_options" />
        <activity android:name=".activity_register" />
        <activity android:name=".loginActivity" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".MenuActivity" />

        <activity android:name=".MainActivity"/>

    </application>

</manifest>