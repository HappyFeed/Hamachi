<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity_editprofile">

    <Button
        android:id="@+id/optionsBtn"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:backgroundTint="#FFFFFF"
        app:icon="@android:drawable/ic_menu_sort_by_size"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Editar perfil"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgEditProfile"
        android:layout_width="176dp"
        android:layout_height="186dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/imgButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/style_border"
        android:backgroundTint="@color/teal_700"
        app:icon="@android:drawable/ic_input_add"
        app:iconGravity="top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/editNameTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/style_border"
        android:backgroundTint="#c4c4c4"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        android:hint="Cambiar nombre de usuario"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgEditProfile" />

    <EditText
        android:id="@+id/editDescriptionTxt"
        android:layout_width="342dp"
        android:layout_height="203dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="#c4c4c4"
        android:ems="10"
        android:hint="Cambiar de descripciÃ³n"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNameTxt" />

    <Button
        android:id="@+id/saveChangesBtn"
        android:layout_width="116dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/style_border"
        android:backgroundTint="@color/teal_700"
        android:fontFamily="@font/poppinsregular"
        android:textSize="18sp"
        app:icon="@android:drawable/ic_menu_upload"
        app:iconGravity="top"
        app:iconPadding="8dp"
        app:iconSize="45dp"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDescriptionTxt" />
</androidx.constraintlayout.widget.ConstraintLayout>